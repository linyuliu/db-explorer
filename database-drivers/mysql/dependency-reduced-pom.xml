<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>database-drivers</artifactId>
    <groupId>com.yourcompany</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>mysql-drivers</artifactId>
  <name>DB Explorer :: MySQL Drivers</name>
  <description>MySQL database drivers for different versions</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <id>shade-mysql5</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>mysql5-shaded</shadedClassifierName>
              <relocations>
                <relocation>
                  <pattern>com.mysql.jdbc</pattern>
                  <shadedPattern>com.yourcompany.dbexplorer.shaded.mysql5</shadedPattern>
                </relocation>
              </relocations>
              <artifactSet>
                <includes>
                  <include>mysql:mysql-connector-java:5.1.49</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
          <execution>
            <id>shade-mysql8</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>mysql8-shaded</shadedClassifierName>
              <relocations>
                <relocation>
                  <pattern>com.mysql.cj</pattern>
                  <shadedPattern>com.yourcompany.dbexplorer.shaded.mysql8.cj</shadedPattern>
                </relocation>
              </relocations>
              <artifactSet>
                <includes>
                  <include>com.mysql:mysql-connector-j</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>5.1.49</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>
